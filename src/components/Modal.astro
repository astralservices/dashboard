---
import { XIcon } from "@heroicons/react/solid/esm/index.js";

const { id, title, Icon, type } = Astro.props;
---

<div id={id} class="overlay">
  <a class="cancel" href="#" data-turbolinks="false"></a>
  <div
    class="grid items-center w-full max-w-lg bg-white rounded-md popup dark:bg-black-300"
  >
    <div>
      {Icon && (
        <div
          class:list={[
            "flex items-center justify-center w-12 h-12 mx-auto rounded-full",
            { "bg-green-100": type === "success" },
            { "bg-amber-100": type === "warn" },
            { "bg-red-100": type === "danger" },
          ]}
        >
          <Icon
            className={`w-6 h-6 ${type === "success" && "text-green-500"} ${
              type === "warn" && "text-amber-500"
            } ${type === "danger" && "text-red-500"}`}
          />
        </div>
      )}
      <div class="mt-3 text-center sm:mt-5">
        <h2 class="text-xl font-bold">{title}</h2>
        <a class="close" href="#" data-turbolinks="false">
          <XIcon className="w-5 h-5" />
        </a>
        <div class="w-full content">
          <slot></slot>
        </div>
      </div>
    </div>
  </div>
</div>
